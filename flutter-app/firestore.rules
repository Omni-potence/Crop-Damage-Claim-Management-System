rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to the 'claims' collection
    // Allow write access for testing the approve/reject functionality
    match /claims/{claimId} {
      allow read: if true;
      allow write: if true; // Temporarily allow write for testing approve/reject
    }

    // Allow public read access to the 'users' collection (for fetching farmer names)
    // Allow authenticated users to write to their own user document
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Keep other collections restricted by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
